
# tap repositories and their packages

tap homebrew/core
brew automake # Tool for generating GNU Standards-compliant Makefiles
brew bash # Bourne-Again SHell, a UNIX command interpreter
brew bash-completion@2 # Programmable completion for Bash 4.2+
brew ccat # Like cat but displays content with syntax highlighting
brew cmake # Cross-platform make
brew colordiff # Color-highlighted diff(1) output
brew dust # More intuitive version of du in rust
brew fish # User-friendly command-line shell for UNIX-like operating systems
brew gcc@11 # GNU compiler collection
brew gh # GitHub command-line tool
brew ghq # Remote repository management made easy
brew git # Distributed revision control system
brew golang #
brew imagemagick # Tools and libraries to manipulate images in select formats
brew jnv # Interactive JSON filter using jq
brew jq # Lightweight and flexible command-line JSON processor
brew latex2rtf # Translate LaTeX to RTF
brew mise # Polyglot runtime manager (asdf rust clone)
brew neovim # Ambitious Vim-fork focused on extensibility and agility
brew nodenv # Node.js version manager
brew pandoc # Swiss-army knife of markup format conversion
brew pip-completion # Bash completion for Pip
brew pipgrip # Lightweight pip dependency resolver
brew pkgconf # Package compiler and linker metadata toolkit
brew poetry # Python package management tool
brew python@3.13 # Interpreted, interactive, object-oriented programming language
brew ruby # Powerful, clean, object-oriented scripting language
brew ruby-completion # Bash completion for Ruby
brew rust # Safe, concurrent, practical language
brew rustup # Rust toolchain installer
brew screen # Terminal multiplexer with VT100/ANSI terminal emulation
brew shellcheck # Static analysis and lint tool, for (ba)sh scripts
brew socat # SOcket CAT: netcat on steroids
brew spark # Sparklines for the shell
brew tig # Text interface for Git repositories
brew utf8proc --HEAD # Clean C library for processing UTF-8 Unicode data
brew vim # Vi 'workalike' with many additional features
brew wget # Internet file retriever
brew zsh-completions # Additional completion definitions for zsh

tap rcmdnk/file
brew rcmdnk/file/brew-file # Brewfile manager for Homebrew.

tap rcmdnk/rcmdnkpac
brew rcmdnk/rcmdnkpac/chatgpt-prompt-wrapper # Python CLI implementation for ChatGPT.

# Main file
main ./Brewfile.$PLATFORM.$HOSTTYPE
